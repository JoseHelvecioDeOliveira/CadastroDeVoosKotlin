    <TextView
        android:id="@+id/text_view_numero_tripulantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarThumbHorizontal="@android:drawable/ic_menu_delete"
        android:scrollbarTrackHorizontal="@android:drawable/ic_menu_delete"
        android:visibility="visible"
        android:drawableLeft="@android:drawable/ic_menu_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_autorizado"
        app:srcCompat="@android:drawable/ic_menu_share"
        tools:text="5"
        tools:visibility="visible">

    </TextView>

    <TextView
        android:id="@+id/text_view_numero_passageiros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarThumbHorizontal="@android:drawable/ic_menu_add"
        android:scrollbarTrackHorizontal="@android:drawable/ic_menu_add"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/text_view_numero_tripulantes"
        app:layout_constraintTop_toBottomOf="@id/text_view_autorizado"
        app:srcCompat="@android:drawable/ic_menu_delete"
        tools:text="2"
        tools:visibility="visible">
    </TextView>

    <ImageView
        android:id="@+id/image_view_delete"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:scrollbarThumbHorizontal="@android:drawable/ic_menu_delete"
        android:scrollbarTrackHorizontal="@android:drawable/ic_menu_delete"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/text_view_numero_passageiros"
        app:layout_constraintTop_toBottomOf="@id/text_view_autorizado"
        tools:ignore="UnknownId"
        app:srcCompat="@android:drawable/ic_menu_delete"
        tools:visibility="visible"/>
